<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FamilyActivity"
    android:background="@drawable/gradient"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.42"
        android:scrollbars="none"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/edge"
        android:fadingEdge="vertical">


        <ImageView
            android:id="@+id/Image_View11"
            android:layout_width="15dp"
            android:layout_height="100dp"
            android:layout_weight="0.25"
            android:padding="10dp" />

        <ImageView
            android:id="@+id/Image_View22"
            android:layout_width="15dp"
            android:layout_height="100dp"
            android:layout_weight="0.25"
            android:padding="10dp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="100dp"
            android:layout_weight="0.25"
            android:padding="10dp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="100dp"
            android:layout_weight="0.25"
            android:padding="10dp" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_weight="0.2">

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:isScrollContainer="true">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="92dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.25"
                    android:padding="10dp"
                    android:src="@mipmap/en"
                    android:id="@+id/ImageEn"/>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.25"
                    android:padding="10dp"
                    android:src="@mipmap/grandpa"
                    android:id="@+id/ImageViewGrandPa"/>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.25"
                    android:padding="10dp"
                    android:src="@mipmap/grandma"
                    android:id="@+id/ImageGrandma"/>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.25"
                    android:padding="10dp"
                    android:src="@mipmap/olderbrother" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.25"
                    android:src="@mipmap/oldersister"
                    android:padding="10dp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.25"
                    android:src="@mipmap/youngerbrother"
                    android:padding="10dp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.25"
                    android:padding="10dp"
                    android:src="@mipmap/youngersister"/>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.25"
                    android:padding="10dp" />

            </TableRow>


        </TableLayout>

    </ScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Myself_oldal"
                android:layout_width="81dp"
                android:layout_height="91dp"
                android:layout_margin="10dp"
                android:src="@mipmap/girl" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/FirstText"
                android:layout_below="@id/Myself_oldal"
                android:text="@string/erzelmek"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_marginLeft="18dp"
                android:background="@color/white"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/Family_oldal"
                android:layout_width="81dp"
                android:layout_height="91dp"
                android:layout_margin="10dp"
                android:src="@mipmap/family"
                android:layout_toRightOf="@id/Myself_oldal"/>

            <ImageView
                android:id="@+id/Harmadik_oldal"
                android:layout_width="81dp"
                android:layout_height="91dp"
                android:layout_margin="10dp"
                android:src="@mipmap/dancing"
                android:layout_toRightOf="@id/Family_oldal"/>

            <ImageView
                android:id="@+id/negyedik_oldal"
                android:layout_width="81dp"
                android:layout_height="91dp"
                android:layout_margin="10dp"
                android:src="@mipmap/cold"
                android:layout_toRightOf="@id/Harmadik_oldal"/>

            <ImageView
                android:id="@+id/otodik_oldal"
                android:layout_width="81dp"
                android:layout_height="91dp"
                android:layout_margin="10dp"
                android:src="@mipmap/drinking"
                android:layout_toRightOf="@id/negyedik_oldal"/>


            <ImageView
                android:id="@+id/button_kamera"
                android:layout_width="81dp"
                android:layout_height="91dp"
                android:layout_margin="10dp"
                android:src="@mipmap/camera"
                android:layout_toRightOf="@id/otodik_oldal"/>

        </RelativeLayout>

    </HorizontalScrollView>


</LinearLayout>