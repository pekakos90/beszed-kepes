<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main2Activity"
    android:background="@drawable/gradient"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.49"
        android:scrollbars="none"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/edge">


                        <ImageView
                            android:id="@+id/Image_View1"
                            android:layout_width="15dp"
                            android:layout_height="100dp"
                            android:layout_weight="0.25"
                            android:padding="5dp" />

                        <ImageView
                            android:id="@+id/Image_View2"
                            android:layout_width="15dp"
                            android:layout_height="100dp"
                            android:layout_weight="0.25"
                            android:padding="5dp" />

                        <ImageView
                            android:id="@+id/Image_View3"
                            android:layout_width="15dp"
                            android:layout_height="100dp"
                            android:layout_weight="0.25"
                            android:padding="5dp" />

                        <ImageView
                            android:id="@+id/Image_View4"
                            android:layout_width="15dp"
                            android:layout_height="100dp"
                            android:layout_weight="0.25"
                            android:padding="5dp" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"

        android:layout_weight="0.2">

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:isScrollContainer="true">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="92dp">

                <ImageView
                    android:id="@+id/Image01"
                    android:layout_width="15dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.25"
                    android:padding="10dp"
                    android:src="@mipmap/girl" />

                <ImageView
                    android:id="@+id/Image02"
                    android:layout_width="15dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.25"
                    android:padding="10dp"
                    android:src="@mipmap/sad" />

                <ImageView
                    android:id="@+id/Image03"
                    android:layout_width="15dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.25"
                    android:padding="10dp"
                    android:src="@mipmap/suprised" />

                <ImageView
                    android:id="@+id/Image04"
                    android:layout_width="15dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.25"
                    android:padding="10dp"
                    android:src="@mipmap/sick" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/Image05"
                    android:layout_width="15dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.25"
                    android:src="@mipmap/uncertain"
                    android:padding="10dp" />

                <ImageView
                    android:id="@+id/Image06"
                    android:layout_width="15dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.25"
                    android:src="@mipmap/drinking"
                    android:padding="10dp" />

                <ImageView
                    android:id="@+id/Image07"
                    android:layout_width="15dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.25"
                    android:padding="10dp" />

                <ImageView
                    android:id="@+id/Image08"
                    android:layout_width="15dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.25"
                    android:padding="10dp" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="match_parent"
                android:layout_height="92dp">

                <ImageView
                    android:id="@+id/Image09"
                    android:layout_width="15dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.25"
                    android:padding="10dp"
                    android:src="@mipmap/girl" />

                <ImageView
                    android:id="@+id/Image010"
                    android:layout_width="30dp"
                    android:layout_height="110dp"
                    android:layout_weight="0.25"
                    android:padding="10dp"
                    android:src="@mipmap/sad2web" />

                <ImageView
                    android:id="@+id/Image011"
                    android:layout_width="15dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.25"
                    android:padding="10dp"
                    android:src="@mipmap/suprised" />

                <ImageView
                    android:id="@+id/Image012"
                    android:layout_width="15dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.25"
                    android:padding="10dp"
                    android:src="@mipmap/sick" />

            </TableRow>



        </TableLayout>

    </ScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Myself_oldal"
                android:layout_width="81dp"
                android:layout_height="91dp"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:src="@mipmap/me" />

            <ImageView
                android:id="@+id/Family_oldal"
                android:layout_width="81dp"
                android:layout_height="91dp"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:src="@mipmap/family" />

            <ImageView
                android:id="@+id/Harmadik_oldal"
                android:layout_width="81dp"
                android:layout_height="91dp"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:src="@mipmap/comode" />

            <ImageView
                android:id="@+id/negyedik_oldal"
                android:layout_width="81dp"
                android:layout_height="91dp"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:src="@mipmap/cold" />

            <ImageView
                android:id="@+id/otodik_oldal"
                android:layout_width="81dp"
                android:layout_height="91dp"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:src="@mipmap/drinking" />


            <ImageView
                android:id="@+id/button_kamera"
                android:layout_width="81dp"
                android:layout_height="91dp"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:src="@mipmap/camera" />

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>